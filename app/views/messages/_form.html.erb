
 <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
   <div class = "alert alert-danger">
       <%= alert %>
       <ul>
          <% @message.errors.full_messages.each do |full_message| %>
          <li>
             <%= full_message %>
          </li>
          <% end %>
       </ul>
   </div>
  <% end %>
 

   <div class= "form-group">
    <label for= "message-name" class= "control-label col-md-2">名前:</label>
    <div class= "col-md-10">
     <%= f.text_field :name, class: "form-conrol" %>
    </div>
   </div>

  
  <div class= "form-group">
   <label for= "form-body" class= "control-label col-md-2">内容:</label>
    <div class = "col-md-10">
     <%= f.text_area :body, class: "form-control" %>
   </div>
  </div>
  <br>
  
  <div class = "form-group">
   <label for= "form-age" class= "control-label col-md-2">年齢:</label>
   <div class = "col-md-10">
    <%= f.text_field :age, class: "form-control" %>
   </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>

 <% end %>